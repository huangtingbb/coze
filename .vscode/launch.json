    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {
                "GIN_MODE": "debug",
                "GO_ENV": "development"
            },
            "args": [],
            "showLog": true,
            "trace": "verbose",
            "buildFlags": "-tags=debug",
            "preLaunchTask": "go: build"
        },
        {
            "name": "Launch Server (Release Mode)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {
                "GIN_MODE": "release",
                "GO_ENV": "production"
            },
            "args": [],
            "showLog": true,
            "trace": "log"
        },
        {
            "name": "Debug Current File",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${file}",
            "env": {},
            "args": [],
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Debug Test in Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-test.run",
                "TestFunction",
                "-test.v"
            ],
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Debug All Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}",
            "args": [
                "-test.v"
            ],
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickProcess}",
            "showLog": true,
            "trace": "verbose"
        },
        {
            "name": "Connect to Remote Delve",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2345,
            "host": "127.0.0.1",
            "showLog": true,
            "trace": "verbose"
        }
    ]
}